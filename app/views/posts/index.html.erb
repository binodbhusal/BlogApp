<div class="mt-12">
<% if @user %>
  <%= render partial: 'partials/user', locals: { user: @user } %>
  <% end %>

  <% if @posts.empty? %>
  <p class="text-center">There are currently no posts available.</p>
<% else %>
  <div class = "">
    <% @posts.each do |post| %>
      <div class = "container mt-3 sm:w-[75%] sm:ml-[16%] xs:w-[69%] xs:ml-[25%] px-3 bg-lblack  rounded-lg">
      <span class="relative top-3"><%= link_to post.title, user_post_path(user_id: post.author_id, id: post.id),class:"text-red font-semibold text-lg" %></span>
      <%= render partial: 'partials/post', locals: { post: post } %>
      </div>
      <div class = "container mt-3 sm:w-[40%] sm:ml-[16%] xs:w-[69%] xs:ml-[25%] px-3 bg-lblack  rounded-lg">
     
      <% post.recent_comments.each do |comment| %>

        <p class="text-sm break-words">
        <%= comment.author.name %>: <%= comment.text %></p>
      <% end %>
    </div>
    <% end %>
  </div>
  <%= will_paginate @posts %>
<% end %>
</div>