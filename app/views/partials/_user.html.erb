<div class = "container flex w-full gap-3">
<% if user.photo.present? %>
<%= image_tag user.photo, alt: 'User Photo', class:"w-20 h-20 rounded-full mb-2" %>
<% else %>
<%= image_tag 'https://placehold.co/64x64', alt: 'profile', class:"w-20 h-20 bg-dark-grey mb-1 rounded-full" %>
<% end %>
<div class="bg-lblack rounded-lg  flex items-center justify-between w-full h-1/2 mb-2">
<%= link_to user_path(user) do %>
<h3 class="ml-5 text-xl text-blue hover:text-grey"><%= user.name %> </h3>
<% end %>
<p class = "mr-5 mt-5 text-sm"> Total posts: <%= user.posts_counter %>
</div>
</div>